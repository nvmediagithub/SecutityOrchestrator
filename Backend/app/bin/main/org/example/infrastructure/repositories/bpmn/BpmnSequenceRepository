package org.example.infrastructure.repositories.bpmn;

import org.example.domain.entities.bpmn.BpmnSequence;
import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.query.Param;
import org.springframework.stereotype.Repository;

import java.util.List;
import java.util.Optional;
import java.util.UUID;

/**
 * Repository for BpmnSequence entities
 */
@Repository
public interface BpmnSequenceRepository extends JpaRepository<BpmnSequence, UUID> {

    /**
     * Find sequences by process
     */
    List<BpmnSequence> findByProcessId(UUID processId);

    /**
     * Find sequences by source task
     */
    List<BpmnSequence> findBySourceTaskId(UUID sourceTaskId);

    /**
     * Find sequences by target task
     */
    List<BpmnSequence> findByTargetTaskId(UUID targetTaskId);

    /**
     * Find sequences with conditions
     */
    @Query("SELECT s FROM BpmnSequence s WHERE s.conditionExpression IS NOT NULL")
    List<BpmnSequence> findSequencesWithConditions();

    /**
     * Find sequences by name pattern
     */
    @Query("SELECT s FROM BpmnSequence s WHERE s.name LIKE %:name%")
    List<BpmnSequence> findByNameContaining(@Param("name") String name);

    /**
     * Count sequences by process
     */
    @Query("SELECT COUNT(s) FROM BpmnSequence s WHERE s.process.id = :processId")
    Long countByProcessId(@Param("processId") UUID processId);

    /**
     * Find default sequences
     */
    @Query("SELECT s FROM BpmnSequence s WHERE s.isDefault = true")
    List<BpmnSequence> findDefaultSequences();

    /**
     * Find sequences by sequence ID
     */
    Optional<BpmnSequence> findBySequenceId(String sequenceId);
}