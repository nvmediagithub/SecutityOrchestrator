package org.example.infrastructure.repository;

import org.example.domain.entities.EndpointAnalysis;
import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.repository.query.Param;
import org.springframework.stereotype.Repository;

import java.util.List;

@Repository
public interface EndpointAnalysisRepository extends JpaRepository<EndpointAnalysis, Long> {
    
    List<EndpointAnalysis> findByEndpointPath(String endpointPath);
    
    List<EndpointAnalysis> findByHttpMethod(EndpointAnalysis.HttpMethod httpMethod);
    
    List<EndpointAnalysis> findBySecurityLevel(EndpointAnalysis.SecurityLevel securityLevel);
    
    List<EndpointAnalysis> findByRiskScoreGreaterThan(double riskScore);
}