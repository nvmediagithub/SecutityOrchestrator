package org.example.infrastructure.services.integration.cache;

import org.example.domain.dto.integration.BpmnContextExtractionResult;
import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.stereotype.Service;

import java.time.LocalDateTime;
import java.util.concurrent.ConcurrentHashMap;
import java.util.Map;
import java.util.Optional;

/**
 * Service for managing BPMN context extraction cache
 */
@Service
public class BpmnCacheService {
    
    private static final Logger logger = LoggerFactory.getLogger(BpmnCacheService.class);
    
    private final Map<String, CachedResult> resultCache = new ConcurrentHashMap<>();
    private static final long CACHE_TTL_HOURS = 24;
    
    public Optional<BpmnContextExtractionResult> getCachedResult(String cacheKey) {
        CachedResult cached = resultCache.get(cacheKey);
        if (cached != null && isCacheValid(cached.getResult())) {
            logger.debug("Cache hit for key: {}", cacheKey);
            return Optional.of(cached.getResult());
        } else if (cached != null) {
            logger.debug("Cache expired for key: {}", cacheKey);
            resultCache.remove(cacheKey);
        }
        return Optional.empty();
    }
    
    public void cacheResult(String cacheKey, BpmnContextExtractionResult result) {
        resultCache.put(cacheKey, new CachedResult(result, LocalDateTime.now()));
        logger.debug("Cached result for key: {}", cacheKey);
    }
    
    public boolean isCacheValid(BpmnContextExtractionResult result) {
        if (result == null || result.getExtractionStartTime() == null) {
            return false;
        }
        return LocalDateTime.now().isBefore(
            result.getExtractionStartTime().plusHours(CACHE_TTL_HOURS));
    }
    
    public void clearCache() {
        resultCache.clear();
        logger.info("BPMN context extraction result cache cleared");
    }
    
    private static class CachedResult {
        private final BpmnContextExtractionResult result;
        private final LocalDateTime cachedAt;
        
        public CachedResult(BpmnContextExtractionResult result, LocalDateTime cachedAt) {
            this.result = result;
            this.cachedAt = cachedAt;
        }
        
        public BpmnContextExtractionResult getResult() {
            return result;
        }
        
        public LocalDateTime getCachedAt() {
            return cachedAt;
        }
    }
}