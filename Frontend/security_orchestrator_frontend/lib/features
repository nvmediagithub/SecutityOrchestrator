import React, { useState, useEffect } from 'react';
import { Card, CardHeader, CardTitle, CardContent } from '@/components/ui/card';
import { Button } from '@/components/ui/button';
import { Badge } from '@/components/ui/badge';
import { Progress } from '@/components/ui/progress';
import { Alert, AlertDescription } from '@/components/ui/alert';
import { Tabs, TabsContent, TabsList, TabsTrigger } from '@/components/ui/tabs';
import { 
  Shield, 
  Play, 
  CheckCircle, 
  XCircle, 
  AlertTriangle, 
  BarChart3, 
  Download, 
  Clock,
  FileText,
  Zap,
  TrendingUp
} from 'lucide-react';

const OwaspApiSecurityTester = () => {
  const [testingStatus, setTestingStatus] = useState('not_started');
  const [currentStep, setCurrentStep] = useState(0);
  const [progress, setProgress] = useState(0);
  const [currentMessage, setCurrentMessage] = useState('');
  const [testResults, setTestResults] = useState(null);
  const [startTime, setStartTime] = useState(null);
  const [endTime, setEndTime] = useState(null);
  const [isPolling, setIsPolling] = useState(false);

  // OWASP Testing Steps Configuration
  const owaspSteps = [
    { id: 1, name: 'BPMN Analysis', description: 'Analyzing BPMN processes with CodeLlama 7B', icon: FileText },
    { id: 2, name: 'OpenAPI Analysis', description: 'Analyzing OpenAPI specification for security risks', icon: BarChart3 },
    { id: 3, name: 'OWASP Tests Generation', description: 'Generating OWASP API Security Top 10 tests', icon: Shield },
    { id: 4, name: 'Test Execution', description: 'Executing generated security tests', icon: Zap },
    { id: 5, name: 'Report Generation', description: 'Generating comprehensive security report', icon: Download }
  ];

  // Polling for status updates
  useEffect(() => {
    let interval;
    if (isPolling) {
      interval = setInterval(fetchOWASPStatus, 1000);
    }
    return () => {
      if (interval) clearInterval(interval);
    };
  }, [isPolling]);

  const fetchOWASPStatus = async () => {
    try {
      const response = await fetch('http://localhost:8090/api/owasp/status');
      const data = await response.json();
      
      setTestingStatus(data.status);
      setCurrentStep(data.current_step || 0);
      setProgress(data.progress || 0);
      setCurrentMessage(data.message || '');
      setStartTime(data.start_time || null);
      setEndTime(data.end_time || null);

      // Stop polling if testing is completed or failed
      if (data.status === 'completed' || data.status === 'error') {
        setIsPolling(false);
        if (data.status === 'completed') {
          fetchOWASPResults();
        }
      }
    } catch (error) {
      console.error('Error fetching OWASP status:', error);
    }
  };

  const fetchOWASPResults = async () => {
    try {
      const response = await fetch('http://localhost:8090/api/owasp/results');
      if (response.ok) {
        const results = await response.json();
        setTestResults(results);
      }
    } catch (error) {
      console.error('Error fetching OWASP results:', error);
    }
  };

  const startOWASPTesting = async () => {
    try {
      setTestingStatus('starting');
      setIsPolling(true);
      setTestResults(null);
      
      const response = await fetch('http://localhost:8090/api/owasp/start', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        }
      });
      
      if (response.ok) {
        await fetchOWASPStatus(); // Initial status fetch
      }
    } catch (error) {
      console.error('Error starting OWASP testing:', error);
      setIsPolling(false);
    }
  };

  const downloadReport = () => {
    if (testResults) {
      const blob = new Blob([JSON.stringify(testResults, null, 2)], {
        type: 'application/json'
      });
      const url = URL.createObjectURL(blob);
      const a = document.createElement('a');
      a.href = url;
      a.download = `OWASP_API_Security_Report_${new Date().toISOString().split('T')[0]}.json`;
      document.body.appendChild(a);
      a.click();
      document.body.removeChild(a);
      URL.revokeObjectURL(url);
    }
  };

  const getStepStatus = (stepId) => {
    if (currentStep > stepId) return 'completed';
    if (currentStep === stepId) return 'current';
    return 'pending';
  };

  const getStatusIcon = (status) => {
    switch (status) {
      case 'completed': return <CheckCircle className="h-5 w-5 text-green-500" />;
      case 'error': return <XCircle className="h-5 w-5 text-red-500" />;
      case 'current': return <Clock className="h-5 w-5 text-blue-500 animate-spin" />;
      default: return <div className="h-5 w-5 rounded-full border-2 border-gray-300" />;
    }
  };

  const getRiskLevelColor = (riskLevel) => {
    switch (riskLevel?.toLowerCase()) {
      case 'high': return 'destructive';
      case 'medium': return 'secondary';
      case 'low': return 'outline';
      default: return 'outline';
    }
  };

  return (
    <div className="p-6 max-w-7xl mx-auto space-y-6">
      {/* Header */}
      <div className="flex items-center justify-between">
        <div className="flex items-center space-x-3">
          <Shield className="h-8 w-8 text-red-600" />
          <div>
            <h1 className="text-3xl font-bold text-gray-900">OWASP API Security Testing</h1>
            <p className="text-gray-600">Comprehensive security analysis of BPMN processes and OpenAPI specifications</p>
          </div>
        </div>
        <div className="flex space-x-3">
          {testResults && (
            <Button onClick={downloadReport} variant="outline">
              <Download className="h-4 w-4 mr-2" />
              Download Report
            </Button>
          )}
          <Button 
            onClick={startOWASPTesting}
            disabled={testingStatus === 'running' || testingStatus === 'starting'}
            className="bg-red-600 hover:bg-red-700"
          >
            <Play className="h-4 w-4 mr-2" />
            {testingStatus === 'running' ? 'Testing in Progress...' : 'Start Security Testing'}
          </Button>
        </div>
      </div>

      {/* Testing Progress */}
      {(testingStatus === 'running' || testingStatus === 'starting') && (
        <Card>
          <CardHeader>
            <CardTitle className="flex items-center space-x-2">
              <Clock className="h-5 w-5" />
              <span>Security Testing Progress</span>
            </CardTitle>
          </CardHeader>
          <CardContent className="space-y-4">
            <div>
              <div className="flex justify-between text-sm mb-2">
                <span>Overall Progress</span>
                <span>{progress}%</span>
              </div>
              <Progress value={progress} className="h-3" />
            </div>
            
            <div className="text-sm text-gray-600">
              <strong>Current Step:</strong> {currentMessage}
            </div>

            {/* Step-by-step progress */}
            <div className="space-y-3">
              {owaspSteps.map((step) => {
                const status = getStepStatus(step.id);
                return (
                  <div key={step.id} className="flex items-center space-x-3 p-3 rounded-lg border">
                    <div className="flex-shrink-0">
                      {getStatusIcon(status)}
                    </div>
                    <div className="flex-1">
                      <div className="flex items-center space-x-2">
                        <h4 className="font-medium">{step.name}</h4>
                        {status === 'completed' && (
                          <Badge variant="default" className="bg-green-100 text-green-800">Completed</Badge>
                        )}
                        {status === 'current' && (
                          <Badge variant="default" className="bg-blue-100 text-blue-800">In Progress</Badge>
                        )}
                      </div>
                      <p className="text-sm text-gray-600">{step.description}</p>
                    </div>
                  </div>
                );
              })}
            </div>
          </CardContent>
        </Card>
      )}

      {/* Results */}
      {testResults && (
        <div className="grid grid-cols-1 lg:grid-cols-2 gap-6">
          {/* Summary */}
          <Card>
            <CardHeader>
              <CardTitle className="flex items-center space-x-2">
                <TrendingUp className="h-5 w-5" />
                <span>Test Summary</span>
              </CardTitle>
            </CardHeader>
            <CardContent className="space-y-4">
              <div className="grid grid-cols-2 gap-4">
                <div>
                  <p className="text-sm text-gray-600">Total Tests</p>
                  <p className="text-2xl font-bold">{testResults.summary?.total_tests || 0}</p>
                </div>
                <div>
                  <p className="text-sm text-gray-600">Vulnerabilities Found</p>
                  <p className="text-2xl font-bold text-red-600">{testResults.summary?.vulnerabilities_found || 0}</p>
                </div>
                <div>
                  <p className="text-sm text-gray-600">Vulnerability Rate</p>
                  <p className="text-2xl font-bold text-orange-600">{testResults.summary?.vulnerability_rate || 0}%</p>
                </div>
                <div>
                  <p className="text-sm text-gray-600">Risk Level</p>
                  <Badge variant={getRiskLevelColor(testResults.summary?.overall_risk_level)}>
                    {testResults.summary?.overall_risk_level || 'Unknown'}
                  </Badge>
                </div>
              </div>
            </CardContent>
          </Card>

          {/* OWASP Top 10 Results */}
          <Card>
            <CardHeader>
              <CardTitle className="flex items-center space-x-2">
                <Shield className="h-5 w-5" />
                <span>OWASP API Security Top 10</span>
              </CardTitle>
            </CardHeader>
            <CardContent>
              <div className="space-y-3">
                {testResults.owasp_top_10?.map((category, index) => (
                  <div key={index} className="flex items-center justify-between p-3 border rounded-lg">
                    <div className="flex-1">
                      <h4 className="font-medium text-sm">{category.category}</h4>
                      <p className="text-xs text-gray-600">{category.description}</p>
                    </div>
                    <div className="flex space-x-2">
                      <Badge variant="outline">{category.test_count} tests</Badge>
                      {category.vulnerabilities_found > 0 ? (
                        <Badge variant="destructive">{category.vulnerabilities_found} found</Badge>
                      ) : (
                        <Badge variant="default" className="bg-green-100 text-green-800">Clean</Badge>
                      )}
                    </div>
                  </div>
                ))}
              </div>
            </CardContent>
          </Card>

          {/* Detailed Vulnerabilities */}
          <Card className="lg:col-span-2">
            <CardHeader>
              <CardTitle className="flex items-center space-x-2">
                <AlertTriangle className="h-5 w-5" />
                <span>Detected Vulnerabilities</span>
              </CardTitle>
            </CardHeader>
            <CardContent>
              {testResults.vulnerabilities && testResults.vulnerabilities.length > 0 ? (
                <div className="space-y-4">
                  {testResults.vulnerabilities.map((vuln, index) => (
                    <div key={index} className="border-l-4 border-red-500 pl-4 py-2">
                      <div className="flex items-center justify-between">
                        <h4 className="font-medium text-red-700">{vuln.title}</h4>
                        <Badge variant="destructive">{vuln.severity}</Badge>
                      </div>
                      <p className="text-sm text-gray-600 mt-1">{vuln.description}</p>
                      <div className="mt-2">
                        <p className="text-xs text-gray-500">
                          <strong>OWASP Category:</strong> {vuln.owasp_category}
                        </p>
                        {vuln.endpoint && (
                          <p className="text-xs text-gray-500">
                            <strong>Affected Endpoint:</strong> {vuln.endpoint}
                          </p>
                        )}
                      </div>
                    </div>
                  ))}
                </div>
              ) : (
                <div className="text-center py-8">
                  <CheckCircle className="h-12 w-12 text-green-500 mx-auto mb-4" />
                  <h3 className="text-lg font-medium text-gray-900 mb-2">No Vulnerabilities Detected</h3>
                  <p className="text-gray-600">All security tests passed successfully!</p>
                </div>
              )}
            </CardContent>
          </Card>
        </div>
      )}

      {/* Error State */}
      {testingStatus === 'error' && (
        <Alert variant="destructive">
          <XCircle className="h-4 w-4" />
          <AlertDescription>
            OWASP API Security Testing failed. Please check the server logs for more details.
          </AlertDescription>
        </Alert>
      )}
    </div>
  );
};

export default OwaspApiSecurityTester;